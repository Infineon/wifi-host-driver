          <declname>optional_channel_list</declname>
        </param>
        <param>
          <type>const <ref refid="structwhd__scan__extended__params__t" kindref="compound">whd_scan_extended_params_t</ref> *</type>
          <declname>optional_extended_params</declname>
        </param>
        <param>
